<div class="grid">
  <div class="col-2-3">
    <h1>Encounters</h1>
    <% @encounters.each do |encounter| %>
        <article>
            <h2><%= link_to encounter.title, encounter_path(encounter) %></h2>
            <% if encounter.image.exists? %>
            <img src="<%= encounter.image(:medium) %>">
            <% end %>
            <p><%= encounter.content %></p>
            <p><%= encounter.cryptid %></p>
            <p><%= encounter.user %></p>
            <%= link_to 'Read more', encounter %>
            <% if can? :update, encounter %>
                <%= link_to "[Edit]", edit_encounter_path(encounter) %>
            <% end %>
        </article>
    <% end %>
    <br>

    <%= link_to 'New Encounter', new_encounter_path %>

  </div>
    <div class="col-1-3">
      <div class="cryptids-list">
        <h2>Cryptids</h2>
        <ul>
          <% @cryptids.each do |cryptid| %>
            <li><%= link_to cryptid.name, cryptid_path(cryptid) %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
