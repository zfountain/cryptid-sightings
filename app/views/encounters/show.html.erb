<h1 class="sub">
  <%= @encounter.title %>
</h1>
<article>
  <% if @encounter.image.exists? %>
    <img src="<%= @encounter.image(:medium) %>">
  <% end %>
  <p><%= @encounter.content %></p>
  <p>Posted by <%= link_to @encounter.user.username, user_path(@encounter.user) %></p>
  <p>Location: <%= @encounter.city %>, <%= @encounter.state %>, <%= @encounter.country %></p>
  <p>Filed under <%= link_to @encounter.cryptid.name, cryptid_path(@encounter.cryptid) %></p>

  <%# @encounter.comments.each do |comment| %>
