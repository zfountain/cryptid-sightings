<% if can? :update, @encounter %>
  <%= link_to "Edit", edit_encounter_path(@encounter) %> |
<% end %>    
<% if can? :destroy, @encounter %>
  <%= link_to 'Delete', @encounter, method: :delete, data: { confirm: 'Are you sure you want to delete your encounter?' } %> |
<% end %>
