<div class="grid">
  <div class="col-2-3">
    <h1>
      <%= @encounter.title %>
    </h1>
    <article>
      <% if @encounter.image.exists? %>
        <img src="<%= @encounter.image(:medium) %>">
      <% end %>
      <p><%= @encounter.content %></p>
        <!-- if statement is a temporary solution, until all encounters are tied to a user -->
        <% if @encounter.user %>
          <p>Posted by <%= @encounter.user.email %></p>
        <% end %>
        <% if @encounter.cryptid %>
          <p>Filed under <%= @encounter.cryptid.name %></p>
        <% end %>

      <% @encounter.comments.each do |comment| %>
        <p><%= comment.content %><br>
          <%#= comment.user.email %>
        </p>
      <% end %>




    <h3>Add a comment:</h3>
    <%= form_for([@encounter, @encounter.comments.build]) do |f| %>
      <!-- <p>
        <%#= f.label :commenter %><br>
        <%#= f.text_field :commenter %>
      </p> -->
      <p>
        <%= f.label :comment %><br>
        <%= f.text_area :content %>
      </p>
      <p>
        <%= f.submit %>
      </p>
    <% end %>

    <% if can? :update, @encounter %>
      <%= link_to "Edit", edit_encounter_path(@encounter) %> |
    <% end %>
    <%= link_to 'More encounters', "/" %>

    </article>
  </div>
  <div class="col-1-3">
    <div class="cryptids-list">
      <h2>Cryptids</h2>
      <ul id="cryptids">

        <%# @cryptids.each do |cryptid| %>
          <li><%#= link_to cryptid.name, cryptid_path(cryptid) %></li>
        <%# end %>
      </ul>
    </div>
  </div>
</div>